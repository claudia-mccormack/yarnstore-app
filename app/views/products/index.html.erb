<h1>All Products</h1>

<div class="row products-index">
<% @all_products.each do |yarn| %>
<a href="/products/<%= yarn.id %>">
  <div class="col-md-4 well">
    <p><h3><%= yarn.name %></h3></p>
    <p><img src="<%= yarn.image %>"></p>
    <p><h4><%= yarn.sale_message %></h4></p>
  </div>
</a>
<% end %>
</div>
